<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kostya.whatsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@id/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.profile.UserProfileActivity"></activity>
        <activity android:name=".views.chats.ChatActivity" />
        <activity android:name=".views.contact.ContactActivity" />
        <activity
            android:name=".views.display.ViewImageActivity"
            android:theme="@style/ActivityImageProfile" />
        <activity android:name=".views.profile.ProfileActivity" />
        <activity android:name=".views.settings.SettingsActivity" />
        <activity android:name=".views.auth.AddUserActivity" />
        <activity android:name=".views.auth.PhoneLoginActivity" />
        <activity android:name=".views.startup.WelcomeActivity" />
        <activity android:name=".views.MainActivity" />
        <activity android:name=".views.startup.SplashScreenctivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>